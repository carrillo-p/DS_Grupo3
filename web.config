<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="%home%\site\wwwroot\startup.sh"
                  arguments=""
                  stdoutLogEnabled="true"
                  stdoutLogFile="%home%\LogFiles\stdout.log"
                  startupTimeLimit="600">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="WEBSITES_CONTAINER_START_TIME_LIMIT" value="1800" />
        <environmentVariable name="WORKER_MAX_MEMORY_PER_CHILD" value="250000" />
        <environmentVariable name="MPLCONFIGDIR" value="/tmp/matplotlib" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>